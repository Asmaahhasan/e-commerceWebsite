@model FixIt.Models.Users
@{
    Layout = null;
}
@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>CodePen - Sign up / Login Form</title>
    <link rel="stylesheet" href="./style.css">

</head>
</html>
<html>
<head>
	<link href="~/css/register.css" rel="stylesheet" />
    <title>Slide Navbar</title>
 
    <link href="https://fonts.googleapis.com/css2?family=Jost:wght@500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
    <link href="~/css/Register.css" rel="stylesheet" />

</head>
<body>
    <div class="main">
        <input type="checkbox" id="chk" aria-hidden="true">

<div class="login">
    <form method="post">
        <label class="log-in" for="chk" aria-hidden="true">Login</label>
        <div asp-validation-summary="ModelOnly"></div>
        <input asp-for="EMail" placeholder="Email"  />
        <span asp-validation-for="EMail" class="text-danger"></span>


        <input asp-for="Pass" type="password" placeholder="Password" />
        <span asp-validation-for="Pass" class="text-danger"></span>

        <hr4>@ViewBag.ErrorMessage</hr4>
        <button type="submit">Login</button>



    </form>

            <form action="~/user/Register">
                <button type="submit"> Create a new account</button>
            </form>
        </div>
</div>
 </body>
